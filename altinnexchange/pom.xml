    <build>
        <resources>
            <resource>
                <directory>wsdl</directory>
                <includes>
                    <include>*.wsdl</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>com.sun.xml.ws</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>${jaxws-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>normal-messages</id>
                        <goals>
                            <goal>
                                wsimport
                            </goal>
                        </goals>
                        <configuration>
                            <packageName>no.difi.meldingsutveksling.altinn.mock.brokerbasic</packageName>
                            <wsdlFiles>
                                <wsdlFile>${basedir}/wsdl/BrokerServiceExternalBasic.wsdl</wsdlFile>
                            </wsdlFiles>
                            <vmArgs>
                                <vmArg>-Djavax.xml.accessExternalDTD=all</vmArg>
                                <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                            </vmArgs>
                            <verbose>true</verbose>
                        </configuration>
                    </execution>
                    <execution>
                        <id>big-messages</id>
                        <goals>
                            <goal>
                                wsimport
                            </goal>
                        </goals>
                        <configuration>
                            <packageName>no.difi.meldingsutveksling.altinn.mock.brokerstreamed</packageName>
                            <wsdlFiles>
                                <wsdlFile>${basedir}/wsdl/BrokerServiceExternalBasicStreamed.wsdl</wsdlFile>
                            </wsdlFiles>
                            <vmArgs>
                                <vmArg>-Djavax.xml.accessExternalDTD=all</vmArg>
                                <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                            </vmArgs>
                            <verbose>true</verbose>
                            <xadditionalHeaders>true</xadditionalHeaders>
                        </configuration>
                    </execution>
                    <execution>
                        <id>receipts</id>
                        <goals>
                            <goal>
                                wsimport
                            </goal>
                        </goals>
                        <configuration>
                            <wsdlFiles>
                                <wsdlFile>${basedir}/wsdl/ReceiptExternalBasic.wsdl</wsdlFile>
                            </wsdlFiles>
                            <vmArgs>
                                <vmArg>-Djavax.xml.accessExternalDTD=all</vmArg>
                                <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                            </vmArgs>
                            <verbose>true</verbose>
                            <xnocompile>true</xnocompile>
                            <xadditionalHeaders>true</xadditionalHeaders>
                            <keep>true</keep>
                            <extension>true</extension>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <!-- mcs org.codehaus.mojo:jaxb2-maven-plugin -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>xsd</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <addGeneratedAnnotation>true</addGeneratedAnnotation>
                            <sources>
                                <source>${basedir}/xsd</source>
                            </sources>
                            <!--
                            <verbose>true</verbose>
                            -->
                            <!--
                            no need to specify, these are default
                            https://www.mojohaus.org/jaxb2-maven-plugin/Documentation/v3.1.0/example_xjc_basic.html
                            <sources>
                                <source>src/main/xsd</source>
                            </sources>
                            <xjbSources>
                                <xjbSource>src/main/xjb</xjbSource>
                            </xjbSources>
                            -->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
