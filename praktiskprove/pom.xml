<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                              http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>no.difi.meldingsutveksling</groupId>
  <artifactId>parent-pom</artifactId>
  <packaging>pom</packaging>
  <version>1.0</version>
  <name>Multiproject for meldingsutveksling</name>

  <scm>
    <connection>scm:git:https://github.com/difi/meldingsutveksling-mellom-offentlige-virksomheter.git</connection>
    <developerConnection>scm:git:git@github.com:difi/meldingsutveksling-mellom-offentlige-virksomheter.git
    </developerConnection>
    <url>https://github.com/difi/meldingsutveksling-mellom-offentlige-virksomheter.git</url>
    <tag>v/1.0-RC</tag>
  </scm>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <springVersion>4.1.2.RELEASE</springVersion>
  </properties>

  <modules>
    <module>noarkexchange</module>
    <module>adresseregister-web</module>
    <module>adresseregister-domain</module>
    <module>adresseregister-client</module>
    <module>dokumentpakking</module>
    <module>integrasjonspunkt</module>
    <module>domain</module>
    <module>sbd-reader</module>
    <module>transport</module>
    <module>transport-oxalis</module>
    <module>transport-file</module>
    <module>virksomhetsvalidator</module>
  </modules>
  <build>
    <pluginManagement>

      <plugins>
        <plugin>
          <groupId>com.heroku.sdk</groupId>
          <artifactId>heroku-maven-plugin</artifactId>
          <version>0.1.9</version>
          <configuration>
            <appName>muv-adresseregister</appName>
            <processTypes>
              <web>java $JAVA_OPTS -jar
                adresseregister-web/target/{project.artifactId}-{project.version}.{project.packaging}
              </web>
            </processTypes>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>sonar-maven-plugin</artifactId>
          <version>2.4</version>

        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.7</source>
            <target>1.7</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>sonar-maven-plugin</artifactId>
        <version>2.4</version>
      </plugin>

      <!-- Used for release cycle -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.2</version>
        <configuration>
          <tagNameFormat>v/@{project.version}-RC</tagNameFormat>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>sonar</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <sonar.jdbc.url>
          jdbc:mysql://sonardb.ctzlmjai0kmz.us-east-1.rds.amazonaws.com:3306/sonardb?useUnicode=true&amp;characterEncoding=utf8
        </sonar.jdbc.url>
        <sonar.jdbc.driverClassName>com.mysql.jdbc.Driver</sonar.jdbc.driverClassName>
        <sonar.jdbc.username>sonar</sonar.jdbc.username>
        <sonar.jdbc.password>sonar114Ameta</sonar.jdbc.password>
        <sonar.host.url>http://sonar.inbeta.ws</sonar.host.url>
        <sonar.java.source>1.7</sonar.java.source>
      </properties>
    </profile>
  </profiles>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
